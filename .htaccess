RewriteEngine On

# Exclude admin folder from rewrite rules
RewriteCond %{REQUEST_URI} !^/ziasmermergranit/admin/

# Root directory should load index.php
RewriteRule ^$ index.php [L,QSA]

# Pages without extensions
RewriteRule ^about/?$ about.php [L,QSA]
RewriteRule ^contact/?$ contact.php [L,QSA]
RewriteRule ^products/?$ products.php [L,QSA]
RewriteRule ^proizvodi/?$ products.php [L,QSA]
RewriteRule ^proizvodi/([a-z0-9\-]+)/?$ products.php?category=$1 [L,QSA]
RewriteRule ^home/?$ home.php [L,QSA]

# Product detail by slug
RewriteRule ^proizvod/([a-z0-9\-]+)/?$ product.php?slug=$1 [L,QSA]

# Fallback to existing files
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule . - [L]